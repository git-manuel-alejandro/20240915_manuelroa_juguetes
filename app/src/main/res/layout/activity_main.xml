<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtJuguetes"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:textColor="@color/celeste"
        android:textSize="25sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:text="@string/Juguetes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/juguetesRv"
        android:layout_below="@id/txtJuguetes"
        android:padding="15dp"
        tools:listitem="@layout/item_juguete"

        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton

        android:id="@+id/FABAgregarEntrada"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_agregar_entrada"
        android:backgroundTint="@color/celeste"
        app:tint="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />


</RelativeLayout>